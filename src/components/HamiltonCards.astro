---
export interface CardProps
 {
    imgUrl : string; 
    pName : string; 
 }

 const {imgUrl , pName} = Astro.props; 
---

<div
    class="w-80 xl:w-[350px] 2xl:w-[400px] overflow-hidden shadow-md m-4 bg-white"
>
    <div class="bg-[#D9D9D9] h-60 flex items-center justify-center">
        <img src={imgUrl} alt="" class="w-80 xl:w-[350px] 2xl:w-[400px] xl:h-[250px] 2xl:h-[270px]">
    </div>
    <div class="bg-white pt-6 pb-3 border-t border-gray-300 text-center">
        <span class="font-bold text-gray-700">{pName}</span>
    </div>
</div>
