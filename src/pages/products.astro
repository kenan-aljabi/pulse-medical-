                <div>
                    <button class="flex items-center">
                        <img
                            src="/img/SearchIcon.png"
                            alt="Search"
                            class="w-[20px] h-[20px]"
                        />
                    </button>
                </div>
            </div>
        </div>
    </nav>
</BaseLayout>
