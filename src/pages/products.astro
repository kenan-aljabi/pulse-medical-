        <h2 class="text-[34px] font-bold tracking-tighter leading-10">
            Our Featured Products
        </h2>
    </div>

    <!--Nav Links -->
    <nav class="mt-12">
        <div class="container mx-auto flex justify-around items-center">
            <div
                class="flex space-x-16 font-bold text-[#9A9AB0] font-dm-sans items-center text-[20px] tracking-tighter"
            >
                <!-- Navbar Links -->
                <a href="#" class="hover:text-[#48A5D0] active:text-[#48A5D0]"
                    >AirSep</a
                >
                <a href="#" class="hover:text-[#48A5D0] active:text-[#48A5D0]"
