---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
	<!--Upper Part Of The Body-->
	<div
		class="container mx-auto flex items-center justify-between font-normal"
	>
		<div class="ms-12 w-2/3">
			<h2 class="font-bold text-3xl uppercase leading-snug">
				offering <span class="text-custom-text-color">advanced</span>, <span
					class="text-custom-text-color">high-quality</span
				> medical and lab equipment with a world-class customer-oriented.
			</h2>
			<div class="mt-7 leading-snug  text-xl">
				<p>
					Delivering Cost-Effective Quality Products with a Commitment
					to Customer Satisfaction and Lifelong Relationships
				</p>
			</div>
			<div class="flex space-x-6 mt-10">
				<button
					class="bg-blue-500 text-white font-semibold py-2 px-4 rounded-md shadow-md hover:bg-blue-600 transition-colors"
				>
					Browse Our Services
				</button>
				<button
					class="bg-transparent border border-blue-500 text-blue-500 font-semibold py-2 px-4 rounded-md shadow-md hover:bg-blue-100 transition-colors"
				>
					Browse Our Services
				</button>
			</div>
		</div>

		<div>
			<p class="sm:ms-12">
				Lorem, ipsum dolor sit amet consectetur adipisicing elit.
				Reprehenderit veritatis, mollitia consequatur aut nemo, saepe,
				vitae fuga pariatur deserunt error dignissimos adipisci
				voluptatibus id iusto animi voluptatum culpa eaque nisi?
			</p>
		</div>
	</div>
</BaseLayout>
