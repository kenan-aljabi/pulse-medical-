---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
import Ellipse from "../components/Ellipse.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
---

<BaseLayout>
	<!-- Upper Part Of The Body -->
	<div
		class="container flex flex-col md:flex-row items-center justify-around font-normal mx-auto relative mt-10 xl:ps-2 lg:ps-6"
	>
		<!-- Text Section -->
		<div class="w-full md:w-1/2">
			<h2
				class="font-bold md:text-3xl lg:text-4xl uppercase leading-[50px] text-2xl w-[350px] md:w-[500px]"
			>
				offering <span class="text-custom-text-color">advanced</span>, <span
					class="text-custom-text-color">high-quality</span
				> medical and lab equipment with a world-class customer-oriented.
			</h2>
			<div
				class="mt-5 md:mt-7 mb-2 leading-snug text-2xl md:text-xl font-bold text-[#707A80] md:w-[580px] w-[350px]"
			>
				<p>
					Delivering Cost-Effective Quality Products with a Commitment
					to Customer Satisfaction and Lifelong Relationships
				</p>
			</div>

			<!--Button Component -->
			<Button />
		</div>

		<!-- Photo Section -->
		<div class="md:w-1/2 mt-1 md:mt-0 relative">
			<!-- Ellipse Behind the Photo -->
			<Ellipse />

			<!-- Photo -->
			<div class="flex justify-center relative">
				<img
					src="/img/doctor.png"
					alt="Doctor"
					class="w-48 md:w-72 lg:w-80 xl:w-96 h-auto object-cover rounded-md"
				/>
			</div>
		</div>
	</div>

	<!--Middle Body Part -->
	<div class="flex justify-center items-center mt-24 md:mt-40 mx-auto">
		<h2 class="font-bold text-3xl md:text-4xl tracking-tight">
			Our Trusted Clients
		</h2>
	</div>

	<!--Logo Part -->
	<div
		class="container columns-2 md:columns-4 lg:columns-7 flex-col flex md:flex-row justify-center items-center gap-x-8 md:gap-x-12 xl:gap-x-[103px] mt-12 md:mt-20 text-xl md:text-3xl font-bold mb-20 lg:mb-44 mx-auto"
	>
		<p>Logo1</p>
		<p>Logo2</p>
		<p>Logo3</p>
		<p>Logo4</p>
		<p>Logo5</p>
		<p>Logo6</p>
		<p>Logo7</p>
	</div>

	<!-- Our Premium Services -->
	<div
		class="container mx-auto flex flex-col md:flex-row justify-center gap-x-16 service-section mt-20 relative"
	>
		<!-- Service Description Section -->
		<div class="md:w-1/2">
			<h2 class="font-bold text-2xl md:text-[34px] tracking-tighter">
				Our Premium Services
			</h2>

			<div class="mt-10 ps-3">
				<!-- Design Service -->
				<div
					class="service-item mb-6 border-l-0 ps-4 rounded-sm transition-all duration-300 hover:border-l-[7px] hover:ps-6 hover:border-[#6699FF]"
					data-image="https://via.placeholder.com/420x316/6699FF"
				>
					<h3 class="text-xl md:text-[24px] font-bold mb-3">
						Design
					</h3>
					<p>
						Expertise-Driven Integrated Healthcare Solutions: From
						Planning to Installation with Unwavering Commitment to
						Quality.
					</p>
				</div>

				<!-- Supply Service -->
				<div
					class="service-item mb-6 border-l-0 ps-4 rounded-sm transition-all duration-300 hover:border-l-[7px] hover:ps-6 hover:border-[#66FF99]"
					data-image="https://via.placeholder.com/420x316/66FF99"
				>
					<h3 class="text-xl md:text-[24px] font-bold mb-3">
						Supply
					</h3>
					<p>
						Expertise-Driven Integrated Healthcare Solutions: From
						Planning to Installation with Unwavering Commitment to
						Quality.
					</p>
				</div>

				<!-- Installation Service -->
				<div
					class="service-item mb-6 border-l-0 ps-4 rounded-sm transition-all duration-300 hover:border-l-[7px] hover:ps-6 hover:border-[#FF9966]"
					data-image="https://via.placeholder.com/420x316/FF9966"
				>
					<h3 class="text-xl md:text-[24px] font-bold mb-3">
						Installation
					</h3>
					<p>
						Expertise-Driven Integrated Healthcare Solutions: From
						Planning to Installation with Unwavering Commitment to
						Quality.
					</p>
				</div>

				<!-- Quality Control Service -->
				<div
					class="service-item mb-6 border-l-0 ps-4 rounded-sm transition-all duration-300 hover:border-l-[7px] hover:ps-6 hover:border-[#6699FF]"
					data-image="https://via.placeholder.com/420x316/6699FF"
				>
					<h3 class="text-xl md:text-[24px] font-bold mb-3">
						Quality Control
					</h3>
					<p>
						Expertise-Driven Integrated Healthcare Solutions: From
						Planning to Installation with Unwavering Commitment to
						Quality.
					</p>
				</div>

				<!-- Training Service -->
				<div
					class="service-item mb-6 border-l-0 ps-4 rounded-sm transition-all duration-300 hover:border-l-[7px] hover:ps-6 hover:border-[#9966FF]"
					data-image="https://via.placeholder.com/420x316/9966FF"
				>
					<h3 class="text-xl md:text-[24px] font-bold mb-3">
						Training
					</h3>
					<p>
						Expertise-Driven Integrated Healthcare Solutions: From
						Planning to Installation with Unwavering Commitment to
						Quality.
					</p>
				</div>
			</div>
		</div>

		<!-- Image Section -->
		<div class="md:w-1/2">
			<img
				id="service-image"
				src="https://via.placeholder.com/420x316"
				alt="Service Image"
				class="w-full h-full object-cover "
			/>
		</div>
	</div>

	<!--Our Featured Products Section -->
	<div
		class="container mt-36 flex flex-col md:flex-row justify-center mb-10 xl:gap-x-[450px] max-lg:flex-col relative mx-auto"
	>
		<Ellipse
			top="%"
			left="10%"
			width="400px"
			height="280px"
			opacity="0.2"
		/>
		<div>
			<h2 class="text-3xl md:text-[34px] font-bold tracking-tighter">
				Our Featured Products
			</h2>
			<p
				class="text-xl md:text-[24px] font-bold text-[#7C7B7B] mt-5 tracking-tighter"
			>
				Experience Unmatched Excellence and Exclusive Solutions
			</p>
		</div>

		<div class="flex mt-6 md:mt-0">
			<button
				class="rounded-xl text-[20px] border-[3px] border-[#6699FF] text-[#6699FF] self-center justify-self-center px-4 py-2 hover:bg-blue-100 transition-colors"
				>View More</button
			>
		</div>
	</div>

	<!--Cards -->
	<div class="container mx-auto flex flex-wrap gap-y-11">
		<Card
			imageUrl="https://via.placeholder.com/420x316"
			category="Product Category"
			title="775l-36 Wheel Chair"
		/>
		<Card
			imageUrl="https://via.placeholder.com/420x316"
			category="Product Category"
			title="775l-36 Wheel Chair"
		/>
		<Card
			imageUrl="https://via.placeholder.com/420x316"
			category="Product Category"
			title="775l-36 Wheel Chair"
		/>
		<Card
			imageUrl="https://via.placeholder.com/420x316"
			category="Product Category"
			title="775l-36 Wheel Chair"
		/>
		<Card
			imageUrl="https://via.placeholder.com/420x316"
			category="Product Category"
			title="775l-36 Wheel Chair"
		/>
		<Card
			imageUrl="https://via.placeholder.com/420x316"
			category="Product Category"
			title="775l-36 Wheel Chair"
		/>
	</div>

	<script>
		// Select the service image element and cast it to HTMLImageElement
		const serviceImage = document.getElementById(
			"service-image",
		) as HTMLImageElement | null;

		// Check if the element exists before proceeding
		if (serviceImage) {
			// Add event listeners to each service item
			document.querySelectorAll(".service-item").forEach((item) => {
				item.addEventListener(
					"mouseover",
					function (this: HTMLElement) {
						const imageUrl = this.getAttribute("data-image");

						// Update the image source if the serviceImage element is not null
						serviceImage.src = imageUrl || ""; // Provide a fallback in case data-image is null
					},
				);
			});
		}
	</script>
</BaseLayout>
