---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
    <div
        class="container mt-20 flex justify-center items-center flex-col mx-auto"
    >
        <h1 class="font-bold text-[34px] leading-[42.5px] tracking-tighter">
            Get In touch
        </h1>
        <h3
            class="font-bold text-[24px] leading-[30px] tracking-tighter text-[#7C7B7B] mt-4"
        >
            Experience Unmatched Excellence and Exclusive Solutions
        </h3>
    </div>

    <!-- Maps Section -->
    <div class="container min-w-full mt-12 bg-[#E4EEF4]">
        <div class="mt-20 flex justify-center gap-2 py-10">
            <!-- Iraq Branch -->
            <div class="flex flex-col items-start">
                <span
                    class="text-black px-3 py-1 text-[22px] font-semibold mb-2"
                    >Iraq Branch</span
                >
                <div
                    class="w-[500px] h-[500px] bg-[#D9D9D9] flex items-center justify-center"
                >
                    <p class="font-bold text-lg">Map</p>
                </div>
            </div>

            <!-- UAE Branch -->
            <div class="flex flex-col items-start">
                <span
                    class="text-black px-3 py-1 text-[22px] font-semibold mb-2"
                    >UAE Branch</span
                >
                <div
                    class="w-[500px] h-[500px] bg-[#D9D9D9] flex items-center justify-center"
                >
                    <p class="font-bold text-lg">Map</p>
                </div>
            </div>
        </div>
    </div>

    <!--Contact Info -->
    <div class="container mx-auto px-28 py-8 bg-[#E4EEF4] mt-20">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Left Column -->
            <div>
                <div class="mb-6">
                    <h2 class="text-[20px] font-semibold mb-2">Contact Info</h2>
                    <div class="space-y-4">
                        <div>
                            <h3 class="font-semibold mb-3 text-[18px]">Iraq Office</h3>
                            <p class="flex items-center ms-3 mb-2">
                                <span class="font-semibold w-24">Address:</span>
                                Your Iraq Address
                            </p>
                            <p class="flex items-center ms-3 mb-2">
                                <span class="font-semibold w-24">Phone:</span> Your
                                Iraq Phone
                            </p>
                            <p class="flex items-center ms-3 mb-2">
                                <span class="font-semibold w-24">Email:</span> Your
                                Iraq Email
                            </p>
                        </div>
                        <div>
                            <h3 class="font-semibold text-[18px] mb-3">UAE Office</h3>
                            <p class="flex items-center">
                                <span class="font-semibold w-24 mb-2 ms-3">Address:</span>
                                Your UAE Address
                            </p>
                            <p class="flex items-center">
                                <span class="font-semibold w-24 mb-2 ms-3">Phone:</span> Your
                                UAE Phone
                            </p>
                            <p class="flex items-center">
                                <span class="font-semibold w-24 mb-2 ms-3">Email:</span> Your
                                UAE Email
                            </p>
                        </div>
                        <div class="mt-6">
                            <h3 class="font-semibold text-[18px] mb-3">Get Social</h3>
                            <div class="flex space-x-4">
                                <div
                                    class="w-12 h-12 bg-gray-200 flex items-center justify-center rounded-full"
                                >
                                    <!-- Instagram Logo Here -->
                                    <span class="text-center">IG</span>
                                </div>
                                <div
                                    class="w-12 h-12 bg-gray-200 flex items-center justify-center rounded-full"
                                >
                                    <!-- Snap Logo Here -->
                                    <span class="text-center">SN</span>
                                </div>
                                <div
                                    class="w-12 h-12 bg-gray-200 flex items-center justify-center rounded-full"
                                >
                                    <!-- LinkedIn Logo Here -->
                                    <span class="text-center">LI</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Right Column -->
            <div>
                <h2 class="text-xl font-semibold mb-4">Get In Touch With Us</h2>
                <form class="space-y-4">
                    <div>
                        <label
                            for="company-name"
                            class="block font-semibold mb-1">Company Name</label
                        >
                        <input
                            type="text"
                            id="company-name"
                            class="w-full border border-gray-300 px-3 py-2 rounded-md"
                        />
                    </div>
                    <div>
                        <label for="email" class="block font-semibold mb-1"
                            >Email Address</label
                        >
                        <input
                            type="email"
                            id="email"
                            class="w-full border border-gray-300 px-3 py-2 rounded-md"
                        />
                    </div>
                    <div>
                        <label for="message" class="block font-semibold mb-1"
                            >Message</label
                        >
                        <textarea
                            id="message"
                            rows="4"
                            class="w-full border border-gray-300 px-3 py-2 rounded-md"
                        ></textarea>
                    </div>
                    <button
                        type="submit"
                        class="bg-[#6699FF] text-white px-16 py-3 rounded-md hover:bg-blue-600"
                        >Send</button
                    >
                </form>
            </div>
        </div>
    </div>
</BaseLayout>
