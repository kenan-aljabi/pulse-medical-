---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
    <div
        class="container mt-20 flex justify-center items-center flex-col mx-auto max-sm:text-center"
    >
        <h1 class="font-bold md:text-[34px] text-[32px] leading-[42.5px] tracking-tighter">
            Get In touch
        </h1>
        <h3
            class="font-bold md:text-[24px] text-[20px] leading-[30px] tracking-tighter text-[#7C7B7B] mt-4"
        >
            Experience Unmatched Excellence and Exclusive Solutions
        </h3>
    </div>

    <!-- Maps Section -->
    <div class="container min-w-full mt-12 bg-[#E4EEF4]">
        <div class="mt-20 flex flex-col lg:flex-row justify-center gap-4 py-10">
            <!-- Iraq Branch -->
            <div class="flex flex-col items-start max-lg:mx-auto">
                <span
                    class="text-black px-3 py-1 text-[22px] font-semibold mb-2 max-sm:mx-auto"
                    >Iraq Branch</span
                >
                <div
                    class="flex items-center justify-center"
                >
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3220.048869702092!2d43.96401517459939!3d36.18969330187776!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x400722966b63fa09%3A0x16840050215031e!2sItalian%20Village%20Rd%2C%20Erbil%2C%20Erbil%20Governorate%2C%20Iraq!5e0!3m2!1sen!2ssa!4v1724790558961!5m2!1sen!2ssa" width="550px" height="550px" style="border:0;" allowfullscreen="" loading="eager" referrerpolicy="no-referrer-when-downgrade" class="xl:h-[650px] xl:w-[650px] md:h-[400px] md:w-[400px] h-[300px] w-[300px]"></iframe>
                </div>
            </div>

            <!-- UAE Branch -->
            <div class="flex flex-col items-start max-lg:mx-auto">
                <span
                    class="text-black px-3 py-1 text-[22px] font-semibold mb-2 max-sm:mx-auto"
                    >UAE Branch</span
                >
                <div
                    class="flex items-center justify-center"
                >
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d930287.9056796989!2d53.37557235080413!3d24.3834903494454!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e5e440f723ef2b9%3A0xc7cc2e9341971108!2sAbu%20Dhabi%20-%20United%20Arab%20Emirates!5e0!3m2!1sen!2ssa!4v1724791054066!5m2!1sen!2ssa" width="550px" height="550px" style="border:0;" allowfullscreen="" loading="eager" referrerpolicy="no-referrer-when-downgrade" class="h-[300px] w-[300px] md:h-[400px] md:w-[400px] xl:h-[650px] xl:w-[650px]"></iframe>
                </div>
            </div>
        </div>
    </div>

    <!--Contact Info -->
    <div class="container mx-auto px-5 md:px-28 py-8 bg-[#E4EEF4] mt-20 min-w-full">
        <div class="grid grid-cols-1 md:grid-cols-2">
            <!-- Left Column -->
            <div>
                <div class="mb-6">
                    <h2 class="text-[20px] font-semibold mb-2">Contact Info</h2>
                    <div class="space-y-4">
                        <div>
                            <h3 class="font-semibold mb-3 text-[18px]">Iraq Office</h3>
                            <p class="flex items-center ms-3 mb-2">
                                <span class="font-semibold w-24">Address:</span>
                                Your Iraq Address
                            </p>
                            <p class="flex items-center ms-3 mb-2">
                                <span class="font-semibold w-24">Phone:</span> Your
                                Iraq Phone
                            </p>
                            <p class="flex items-center ms-3 mb-2">
                                <span class="font-semibold w-24">Email:</span> Your
                                Iraq Email
                            </p>
                        </div>
                        <div>
                            <h3 class="font-semibold text-[18px] mb-3">UAE Office</h3>
                            <p class="flex items-center">
                                <span class="font-semibold w-24 mb-2 ms-3">Address:</span>
                                Your UAE Address
                            </p>
                            <p class="flex items-center">
                                <span class="font-semibold w-24 mb-2 ms-3">Phone:</span> Your
                                UAE Phone
                            </p>
                            <p class="flex items-center">
                                <span class="font-semibold w-24 mb-2 ms-3">Email:</span> Your
                                UAE Email
                            </p>
                        </div>
                        <div class="mt-6">
                            <h3 class="font-semibold text-[18px] mb-3">Get Social</h3>
                            <div class="flex space-x-4">
                                <div
                                    class="w-12 h-12 bg-gray-200 flex items-center justify-center rounded-full"
                                >
                                    <!-- Instagram Logo Here -->
                                    <span class="text-center">IG</span>
                                </div>
                                <div
                                    class="w-12 h-12 bg-gray-200 flex items-center justify-center rounded-full"
                                >
                                    <!-- Snap Logo Here -->
                                    <span class="text-center">SN</span>
                                </div>
                                <div
                                    class="w-12 h-12 bg-gray-200 flex items-center justify-center rounded-full"
                                >
                                    <!-- LinkedIn Logo Here -->
                                    <span class="text-center">LI</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Right Column -->
            <div>
                <h2 class="text-xl font-semibold mb-4">Get In Touch With Us</h2>
                <form class="space-y-4">
                    <div>
                        <label
                            for="company-name"
                            class="block font-semibold mb-1">Company Name</label
                        >
                        <input
                            type="text"
                            id="company-name"
                            class="w-full border border-gray-300 px-3 py-2 rounded-md"
                        />
                    </div>
                    <div>
                        <label for="email" class="block font-semibold mb-1"
                            >Email Address</label
                        >
                        <input
                            type="email"
                            id="email"
                            class="w-full border border-gray-300 px-3 py-2 rounded-md"
                        />
                    </div>
                    <div>
                        <label for="message" class="block font-semibold mb-1"
                            >Message</label
                        >
                        <textarea
                            id="message"
                            rows="4"
                            class="w-full border border-gray-300 px-3 py-2 rounded-md"
                        ></textarea>
                    </div>
                    <div class="max-sm:text-center">
                    <button
                        type="submit"
                        class="bg-[#6699FF] text-white px-16 py-3 rounded-md hover:bg-blue-600"
                        >Send
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</BaseLayout>
